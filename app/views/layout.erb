  <body>
  
    <div class="wrapper">
        <% if flash[:error] %>
  <div class="errors flash fatal">
    <h4 class="error"><%= flash[:error] %></h4>
  </div>
<% end %>
<% if flash[:success] %>
  <div class="success">
    <h4 class="success"><%= flash[:success] %></h4>
  </div>
<% end %>

<% if !!current_user %>
<nav class="navbar navbar-expand-lg navbar navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Home</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/bills/new">Add New Bill</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/bills">Bills</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/logout">Logout</a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<% else  %>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Home</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/signup">Sign Up</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/signin">Sign In</a>
        </li>
      </ul>
    </div>
  </div>
</nav>
<% end  %>
        <%= yield %>

      <footer class="branding">
        <small>&copy; 2021 <strong>BillOrganizer</strong></small>
      </footer>
    </div>

    <script src="https://kit.fontawesome.com/f00723dd1c.js" crossorigin="anonymous"></script>
