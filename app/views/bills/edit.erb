<form class="was-validated" action="/bills/<%=@bill.id%>" method="post">
<input id="hidden" type="hidden" name="_method" value="patch">
  <div class="col-md-4">
    <label for="validationCustom01" class="form-label">Bill Name</label>
    <input type="text" class="form-control" value="<%=@bill.name%>" id="validationCustom01" name="bill[name]" required>
    <div class="valid-feedback">
      Looks good!
    </div>
  </div>
  <br>

   <div class="col-md-4">
    <label for="validationCustom01" class="form-label">Bill Amount</label>
    <input type="number" step="0.01" min=0 class="form-control" value="<%=@bill.amount%>" id="validationCustom01" name="bill[amount]" required>
    <div class="valid-feedback">
      Looks good!
    </div>
  </div>
  <br>

  <div class="mb-3">
    <select class="form-select" id="bill-category" name ="bill[category]" required aria-label="select example">
      <option value="<%= @bill.category%>"><%= @bill.category%></option>
      <% @bill.remaining_categories.each do |category| %>
        <option value="<%= category%>"><%=category%></option>
      <%end%>  
    </select>
  </div>

  <div class="mb-3">
    <select class="form-select" id="bill-recurring" name ="bill[recurring]" required aria-label="select example">
      <option value="true" <%= "selected" if @bill.recurring%>>Yes</option>
      <option value="false" <%= "selected" unless @bill.recurring%>>No</option>
    </select>
  </div>

  <div class="col-md-4">
    <label for="validationCustom01" class="form-label">Bill Due Date (dd-mm-yyyy)</label>
    <input type="text" class="form-control" value="<%=@bill.due_date%>" id="validationCustom01" name="bill[due_date]" required>
    <div class="valid-feedback">
      Looks good!
    </div>
  </div>
  <br>


  <div class="mb-3">
    <button class="btn btn-primary" type="submit">Submit</button>
  </div>
</form>